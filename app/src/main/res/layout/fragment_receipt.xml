<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools">

    <RelativeLayout
        android:id="@+id/rl_back"
        android:layout_width="@dimen/dp_60"
        android:layout_height="@dimen/dp_60"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true">

        <ImageView
            android:id="@+id/iv_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:src="@drawable/back"
            android:visibility="invisible"/>
    </RelativeLayout>

    <TextView
        android:id="@+id/total"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_marginTop="98dp"
        android:layout_centerHorizontal="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="@dimen/dp_24"
        android:layout_marginRight="@dimen/dp_24"
        tools:text="$36.00"
        style="@style/AmountStyle"
        android:lineSpacingExtra="0sp"
        android:gravity="center_horizontal|top"/>

    <TextView
        android:id="@+id/tip"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="@dimen/dp_24"
        android:layout_marginRight="@dimen/dp_24"
        android:paddingLeft="@dimen/dp_24"
        android:paddingRight="@dimen/dp_24"
        android:layout_marginTop="204dp"
        android:textSize="17sp"
        android:text="@string/send_receipt_tip"
        android:textColor="?attr/colorSecondary"
        android:lineSpacingExtra="4sp"
        android:translationY="-2.21sp"
        android:gravity="center_horizontal|top" />

    <!--    <TextView
            android:id="@+id/add_a_tip_20"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="296dp"
            android:layout_marginLeft="@dimen/dp_24"
            android:layout_marginRight="@dimen/dp_24"
            android:text="@string/add_a_tip_20"
            android:textSize="@dimen/sp_17"
            android:textColor="@color/selector_btn_text"
            android:lineSpacingExtra="4sp"
            android:gravity="center_horizontal|center_vertical"
            android:background="@drawable/selector_btn"/>
    -->
    <TextView
        android:id="@+id/receipt_email"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="364dp"
        android:layout_marginLeft="@dimen/dp_24"
        android:layout_marginRight="@dimen/dp_24"
        android:text="@string/email"
        android:textSize="@dimen/sp_17"
        android:textColor="@color/selector_btn_text"
        android:lineSpacingExtra="4sp"
        android:gravity="center_horizontal|center_vertical"
        android:background="@drawable/selector_btn"/>

    <TextView
        android:id="@+id/receipt_sms"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="432dp"
        android:layout_marginLeft="@dimen/dp_24"
        android:layout_marginRight="@dimen/dp_24"
        android:text="@string/sms"
        android:textSize="@dimen/sp_17"
        android:textColor="@color/selector_btn_text"
        android:lineSpacingExtra="4sp"
        android:gravity="center_horizontal|center_vertical"
        android:background="@drawable/selector_btn"/>

    <TextView
        android:id="@+id/receipt_print"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="500dp"
        android:layout_marginLeft="@dimen/dp_24"
        android:layout_marginRight="@dimen/dp_24"
        android:text="@string/print"
        android:textSize="@dimen/sp_17"
        android:textColor="@color/selector_btn_text"
        android:lineSpacingExtra="4sp"
        android:gravity="center_horizontal|center_vertical"
        android:background="@drawable/selector_btn"/>


    <TextView
        android:id="@+id/receipt_no_tip"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="24dp"
        android:layout_marginLeft="@dimen/dp_24"
        android:layout_marginRight="@dimen/dp_24"
        android:text="@string/no_receipt"
        android:textSize="@dimen/sp_17"
        android:textColor="?attr/colorPrimaryVariant"
        android:lineSpacingExtra="4sp"
        android:gravity="center_horizontal|center_vertical"
        android:background="@drawable/selector_secondary_btn"/>
</RelativeLayout>